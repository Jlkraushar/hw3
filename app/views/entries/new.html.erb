<h1>Add New Entry for <%= @place.name %></h1>

<%= form_with(model: [@place, @entry], local: true) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.submit "Add Entry" %>
  </div>
<% end %>

<%= link_to 'Back to Place', place_path(@place) %>
